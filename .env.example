# =============================================================================
# HexStrike Security Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://hexstrike:hexstrike_secret@localhost:5432/hexstrike_db
POSTGRES_USER=hexstrike
POSTGRES_PASSWORD=hexstrike_secret
POSTGRES_DB=hexstrike_db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-secret-key-min-32-characters-long
SESSION_MAX_AGE=86400000

# TOTP (2FA) Settings
TOTP_ISSUER=HexStrike
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Password Policy
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# -----------------------------------------------------------------------------
# Claude API (Anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# HexStrike MCP (Kali Docker)
# -----------------------------------------------------------------------------
HEXSTRIKE_URL=http://localhost:8888
HEXSTRIKE_TIMEOUT=300000

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
API_PORT=4000
WEB_PORT=3000
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# Security Headers
# -----------------------------------------------------------------------------
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# -----------------------------------------------------------------------------
# AWS (Production Only)
# -----------------------------------------------------------------------------
