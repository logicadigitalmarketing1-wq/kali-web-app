# Ugo Pentesting - Production Configuration
# =========================================
# Copy this file to terraform.tfvars and fill in your values

# AWS Region
aws_region = "ca-central-1"

# Anthropic API Key (Claude)
anthropic_api_key = "sk-ant-api03-..."

# Database Configuration (Production-sized)
rds_instance_class        = "db.t3.small"
rds_allocated_storage     = 50
rds_max_allocated_storage = 200

# Cache Configuration (Production-sized)
redis_node_type = "cache.t3.small"

# Compute Configuration (Production-sized)
ecs_instance_type       = "t3.large"
hexstrike_instance_type = "t3.large"

# Alerts (recommended for production)
alert_email = "alerts@ugopentesting.ca"
